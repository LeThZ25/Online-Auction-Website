@model OnlineAuctionWebsite.Controllers.DepositVM
@{
    ViewData["Title"] = "Nộp tiền";
}
@{
    var purpose = (ViewBag.Purpose as string) ?? "deposit"; // "deposit" | "settlement"
    var title = purpose == "settlement" ? "Thanh toán tiền trúng" : "Nộp tiền đặt trước";
    ViewData["Title"] = title;
}
<h1 class="h4 mb-3">@title</h1>
<p class="text-muted">
    @(purpose == "settlement"
        ? "Bạn là người thắng phiên. Hãy chọn phương thức thanh toán."
        : "Vui lòng chọn phương thức nộp tiền đặt trước.")
</p>
<div class="container py-4">
    <h3 class="mb-3">Nộp tiền đặt trước</h3>
    <form asp-action="Deposit" method="post" class="card shadow-sm">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="SessionId" />
        <div class="card-body">
            <div class="mb-3">
                <label class="form-label">Số tiền</label>
                <input asp-for="Amount" type="number" step="1000" class="form-control" value="@(Model.Amount == 0 ? Model.SuggestedAmount : Model.Amount)" />
                <div class="form-text">Gợi ý: @Model.SuggestedAmount.ToString("N0") đ</div>
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label class="form-label">Phương thức</label>
                <div class="form-check">
                    <input class="form-check-input" type="radio" asp-for="Method" value="Bank" checked>
                    <label class="form-check-label">Chuyển khoản ngân hàng</label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" asp-for="Method" value="Qr">
                    <label class="form-check-label">Quét mã QR</label>
                </div>
            </div>
            <button class="btn btn-primary">Tiếp theo</button>
        </div>
    </form>
</div>