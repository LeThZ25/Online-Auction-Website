@{
    ViewData["Title"] = "Quét QR";
    var img = (string)ViewBag.QrPath;
    var amount = (decimal)ViewBag.Amount;
    var pid = (int)ViewBag.PaymentId;
}
<div class="container py-4">
    <h3 class="mb-3">Quét mã QR</h3>
    <div class="card shadow-sm">
        <div class="card-body text-center">
            <p>Số tiền: <strong>@amount.ToString("N0") đ</strong></p>
            <img src="@img" alt="QR" class="img-fluid" style="max-width:280px" />
            <p class="text-muted mt-2 small">Mã QR chỉ là minh hoạ cho demo.</p>
            <form asp-action="QrConfirm" method="post" class="mt-3">
                @Html.AntiForgeryToken()
                <input type="hidden" name="paymentId" value="@pid" />
                <button class="btn btn-success">Tôi đã quét và thanh toán</button>
            </form>
        </div>
    </div>
</div>