@{
    ViewData["Title"] = "Đặt giá";
}

<h2>Đặt giá cho phiên @ViewBag.SessionId</h2>

<form asp-action="Place" method="post">
    <input type="hidden" name="sessionId" value="@ViewBag.SessionId" />
    <div class="form-group">
        <label>Số tiền đặt (VND)</label>
        <input type="number" step="1000" name="amount" class="form-control" />
    </div>
    <button type="submit" class="btn btn-warning">Xác nhận đặt giá</button>
</form>