@{
    ViewData["Title"] = "Tạo phiên đấu giá";
}

<h2>Tạo phiên đấu giá</h2>

<form asp-action="Create" method="post">
    <input type="hidden" name="itemId" value="@ViewBag.ItemId" />
    <div class="form-group">
        <label>Thời gian bắt đầu (UTC)</label>
        <input type="datetime-local" name="startUtc" class="form-control" />
    </div>
    <div class="form-group">
        <label>Thời gian kết thúc (UTC)</label>
        <input type="datetime-local" name="endUtc" class="form-control" />
    </div>
    <div class="form-group">
        <label>Bước giá tối thiểu</label>
        <input type="number" step="1000" name="minIncrement" class="form-control" value="10000" />
    </div>
    <button type="submit" class="btn btn-success">Tạo phiên</button>
</form>