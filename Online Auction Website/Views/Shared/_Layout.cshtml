            <div class="row g-4">

                <!-- Company / Contact -->
                <div class="col-lg-4">
                    <div class="h5 mb-3">Công ty đấu giá hợp danh LeTh</div>
                    <ul class="list-unstyled small opacity-75 mb-3">
                        <li><i class="fa-regular fa-id-card me-2"></i>Mã số thuế: 123456568</li>
                        <li><i class="fa-solid fa-location-dot me-2"></i>Thái Nguyên, Việt Nam</li>
                        <li><i class="fa-solid fa-phone me-2"></i>091234567</li>
                        <li><i class="fa-solid fa-envelope me-2"></i>support@auctionsite.local</li>
                    </ul>
                </div>

                <!-- About -->
                <div class="col-6 col-lg-2">
                    <div class="fw-semibold mb-3">Về chúng tôi</div>
                    <ul class="list-unstyled footer-links">
                        <li><a asp-controller="Home" asp-action="About">Giới thiệu</a></li>
                        <li><a asp-controller="Home" asp-action="Contact">Liên hệ</a></li>
                        <li><a asp-controller="Search" asp-action="Index">Tài sản đấu giá</a></li>
                    </ul>
                </div>

                <!-- Policies -->
                <div class="col-6 col-lg-2">
                    <div class="fw-semibold mb-3">Chính sách</div>
                    <ul class="list-unstyled footer-links">
                        <li><a href="#">Quy chế hoạt động</a></li>
                        <li><a href="#">Giải quyết tranh chấp</a></li>
                        <li><a href="#">Điều khoản sử dụng</a></li>
                        <li><a href="#">Chính sách bảo mật</a></li>
                    </ul>
                </div>

                <!-- Newsletter + badges -->
                <div class="col-lg-4">
                    <div class="fw-semibold mb-3">Tham gia nhận tin</div>
                    <form class="newsletter d-flex gap-2" method="post"
                          asp-controller="Home" asp-action="Subscribe">
                        @Html.AntiForgeryToken()
                        <input type="email" name="email" required
                               class="form-control form-control-lg newsletter-input"
                               placeholder="Nhập email" />
                        <button class="btn btn-danger btn-lg px-4" type="submit">Đăng ký</button>
                    </form>

                    <div class="d-flex align-items-center gap-3 flex-wrap mt-3 store-badges">
                        <a class="btn btn-outline-light btn-sm px-3" href="#" role="button">
                            <i class="fa-brands fa-apple me-1"></i> App Store
                        </a>
                        <a class="btn btn-outline-light btn-sm px-3" href="#" role="button">
                            <i class="fa-brands fa-google-play me-1"></i> Google Play
                        </a>
                        <span class="badge bg-success bg-opacity-25 text-success border border-success">
                            <i class="fa-solid fa-shield-heart me-1"></i>Đã đăng ký Bộ Công Thương
                        </span>
                    </div>
                </div>
            </div>

            <hr class="border-secondary border-opacity-25 my-4" />

            <div class="d-flex flex-column flex-lg-row justify-content-between small opacity-75">
                <div>© @DateTime.Now.Year Công ty đấu giá hợp danh LeTh</div>
                <div>Powered by <a class="link-light text-decoration-none" href="#">AuctionSite</a></div>
            </div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/countdown.js"></script>
    <script>
        (function () {
          const el = document.getElementById('headerTimer');
          if (!el) return;

          const mode = el.dataset.mode || "clock";
          const iso = el.dataset.target;

          function pad(n){ return String(n).padStart(2,'0'); }

          // fallback: live clock (ICT)
          function startClock() {
            const fmt = new Intl.DateTimeFormat('vi-VN', { timeStyle: 'medium', hour12: false, timeZone: 'Asia/Bangkok' });
            const tick = () => el.textContent = fmt.format(new Date());
            tick(); setInterval(tick, 1000);
          }

          if (mode === "clock" || !iso) { startClock(); return; }

          // countdown to target (UTC)
          const target = new Date(iso).getTime();
          function tick() {
            const now = Date.now();
            let s = Math.floor((target - now) / 1000);
            if (s <= 0) { el.textContent = (mode === "end" ? "Đã kết thúc" : "Đến giờ"); return; }

            const days = Math.floor(s / 86400); s %= 86400;
            const h = Math.floor(s / 3600); s %= 3600;
            const m = Math.floor(s / 60);   const sec = s % 60;

            // Show "d HH:MM:SS" if there are days
            el.textContent = (days > 0 ? days + "d " : "") + pad(h) + ":" + pad(m) + ":" + pad(sec);
          }
          tick(); setInterval(tick, 1000);
        })();
    </script>
    <script>
        function updateNavOffset() {
          const nav = document.querySelector('.navbar.fixed-top');
          if (!nav) return;
          const h = nav.getBoundingClientRect().height;
          document.documentElement.style.setProperty('--nav-height', h + 'px');
        }
        window.addEventListener('load', updateNavOffset);
        window.addEventListener('resize', updateNavOffset);
        const navEl = document.querySelector('.navbar.fixed-top');
        if (navEl && 'ResizeObserver' in window) {
          new ResizeObserver(updateNavOffset).observe(navEl);
        }
    </script>
    <script src="https://cdn.jsdelivr.net/npm/swiper@10/swiper-bundle.min.js"></script>
    <script src="~/js/ai-helpers.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>