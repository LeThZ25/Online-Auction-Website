@using Microsoft.AspNetCore.Identity
@using OnlineAuctionWebsite.Models.Entities
@inject OnlineAuctionWebsite.Services.ICategoryService CategoryService
@{
    var cats = await CategoryService.GetAllAsync();
}
@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager
@{
    var title = ViewData["Title"] as string ?? "Online LeTh Auction Website";
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@title - Online Auction</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@10/swiper-bundle.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/auth.css" />

    <style>
      .auction-card .ratio { aspect-ratio: 4/3; }
      .auction-card img { object-fit: cover; width: 100%; height: 100%; }
      /* slider: slide không phóng to full màn */
      .swiper-slide { display:flex; justify-content:center; }
      .swiper-slide .auction-card { max-width: 320px; width: 100%; }
    </style>
</head>
@await Html.PartialAsync("_AiChatWidget")
<body class="no-nav-spacer">
    <header class="shadow-sm">
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary fixed-top shadow">
            <div class="container">
                <a class="navbar-brand fw-bold d-flex align-items-center" asp-controller="Home" asp-action="Index">
                    <img src="~/images/logo.png" alt="Logo" class="brand-logo me-2" />
                </a>
                <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar"
                        aria-controls="mainNavbar" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="mainNavbar">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">

                        <!-- Dropdown Tài sản đấu giá -->
                        <li class="nav-item dropdown fade-slide">
                            <a class="nav-link dropdown-toggle" href="#" id="assetsDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Tài sản đấu giá
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="assetsDropdown">
                                @foreach (var c in cats)
                                {
                                    <li>
                                        <a class="dropdown-item"
                                           asp-controller="Search" asp-action="Index"
                                           asp-route-categoryId="@c.Id">
                                            @c.Name
                                        </a>
                                    </li>
                                }
                            </ul>
                        </li>

                        <!-- Dropdown Phiên đấu giá -->
                        <li class="nav-item dropdown fade-slide">
                            <a class="nav-link dropdown-toggle" href="#" id="sessionsDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Phiên đấu giá
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="sessionsDropdown">
                                <li><a class="dropdown-item" asp-controller="Search" asp-action="Index" asp-route-status="upcoming">Phiên sắp đấu giá</a></li>
                                <li><a class="dropdown-item" asp-controller="Search" asp-action="Index" asp-route-status="live">Phiên đang diễn ra</a></li>
                                <li><a class="dropdown-item" asp-controller="Search" asp-action="Index" asp-route-status="ended">Phiên đã kết thúc</a></li>
                            </ul>
                        </li>

                        <!-- Các mục khác -->
                        <li class="nav-item fade-slide">
                            <a class="nav-link" asp-controller="NewsRead" asp-action="Index">Tin tức</a>
                        </li>
                        <li class="nav-item fade-slide"><a class="nav-link" asp-controller="Home" asp-action="About">Giới thiệu</a></li>
                        <li class="nav-item fade-slide"><a class="nav-link" asp-controller="Home" asp-action="Contact">Liên hệ</a></li>
                        
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item fade-slide">
                                <a class="nav-link" asp-controller="News" asp-action="Index"> Quản trị tin tức
                                </a>
                            </li>
                        }

                        <!-- Đồng hồ -->
                        @await Component.InvokeAsync("HeaderCountdown")
                    </ul>

                    <!-- Form tìm kiếm -->
                    <form class="d-flex me-3" asp-controller="Search" asp-action="Index" method="get">
                        <input class="form-control me-2" type="search" name="q" placeholder="Tìm kiếm..." />
                        <button class="btn btn-outline-light" type="submit">🔍</button>
                    </form>

                    <!-- Khu vực tài khoản -->
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    <main class="flex-shrink-0">
        @if (TempData["Success"] is string ok)
        {
            <div class="container mt-3">
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @ok
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            </div>
        }
        @if (TempData["Info"] is string info)
        {
            <div class="container mt-3">
                <div class="alert alert-info alert-dismissible fade show" role="alert">
                    @info
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            </div>
        }
        @if (TempData["Error"] is string err)
        {
            <div class="container mt-3">
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @err
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            </div>
        }
        @RenderBody()
    </main>

