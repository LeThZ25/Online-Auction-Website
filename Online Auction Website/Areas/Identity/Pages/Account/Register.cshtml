@page
@model RegisterModel
@using Microsoft.AspNetCore.Identity
@using OnlineAuctionWebsite.Models.Entities
@inject SignInManager<AppUser> SignInManager

@{
    ViewData["Title"] = "Đăng ký";
    var schemes = (await SignInManager.GetExternalAuthenticationSchemesAsync()).ToList();
}

<div class="container py-5">
    <div class="row g-4 align-items-stretch">
        <div class="col-lg-7">
            <section class="card shadow-sm border-0 h-100">
                <div class="card-body p-4">
                    <h1 class="h4 mb-3">Tạo tài khoản mới ✨</h1>

                    <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="mb-3">
                            <label asp-for="Input.Email" class="form-label">Email</label>
                            <input asp-for="Input.Email" class="form-control" />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Input.Password" class="form-label">Mật khẩu</label>
                            <input asp-for="Input.Password" class="form-control" />
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Input.ConfirmPassword" class="form-label">Xác nhận mật khẩu</label>
                            <input asp-for="Input.ConfirmPassword" class="form-control" />
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                        </div>

                        <div class="form-check mb-3">
                            <input class="form-check-input" id="agree" type="checkbox" required />
                            <label class="form-check-label" for="agree">
                                Tôi đồng ý với điều khoản & chính sách.
                            </label>
                        </div>

                        <button type="submit" class="btn btn-primary w-100">Đăng ký</button>
                    </form>

                    <div class="mt-3 small">
                        Đã có tài khoản? <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl">Đăng nhập</a>
                    </div>
                </div>
            </section>
        </div>

        <div class="col-lg-5">
            <section class="card shadow-sm border-0 h-100">
                <div class="card-body p-4">
                    <h2 class="h6 mb-3">Đăng ký nhanh</h2>

                    @if (schemes.Any())
                    {
                        <form method="post" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl">
                            @Html.AntiForgeryToken()
                            @foreach (var p in schemes)
                            {
                                var icon = p.Name == "Google" ? "fa-brands fa-google"
                                : p.Name == "Facebook" ? "fa-brands fa-facebook"
                                : "fa-solid fa-right-to-bracket";
                                <button type="submit"
                                        class="btn btn-outline-secondary w-100 mb-2"
                                        name="provider" value="@p.Name"
                                        title="Đăng ký bằng @p.DisplayName">
                                    <i class="@icon me-2"></i>Tiếp tục với @p.DisplayName
                                </button>
                            }
                        </form>
                    }
                    else
                    {
                        <div class="text-muted small">Chưa cấu hình nhà cung cấp ngoài.</div>
                    }
                </div>
            </section>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}