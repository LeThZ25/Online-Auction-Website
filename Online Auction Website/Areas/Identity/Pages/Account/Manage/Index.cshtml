@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h3>@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post">
            <hr class="my-4" />
            <h5 class="mb-3">Tuỳ chọn ngân sách</h5>

            <div class="row mb-3">
                <label asp-for="Input.BudgetCeiling" class="col-md-3 col-form-label"></label>
                <div class="col-md-9">
                    <input asp-for="Input.BudgetCeiling" class="form-control" type="number" step="1000" min="0" placeholder="VD: 5.000.000" />
                    <span asp-validation-for="Input.BudgetCeiling" class="text-danger"></span>
                    <div class="form-text">Nếu để trống: không giới hạn.</div>
                </div>
            </div>

            <div class="form-check mb-3">
                <input class="form-check-input" asp-for="Input.ViewOnlyWhenOverBudget" />
                <label class="form-check-label" asp-for="Input.ViewOnlyWhenOverBudget"></label>
            </div>
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="Username" class="form-control" placeholder="Please choose your username." disabled />
                <label asp-for="Username" class="form-label"></label>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.PhoneNumber" class="form-control" placeholder="Please enter your phone number."/>
                <label asp-for="Input.PhoneNumber" class="form-label"></label>
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
            <button id="update-profile-button" type="submit" class="w-100 btn btn-lg btn-primary">Save</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
